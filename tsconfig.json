  "compilerOptions": {
    "outDir": "public",
    "target": "ES2020",
    "module": "commonjs", 
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                  
    "skipLibCheck": true,
    "noImplicitAny": true                  
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}
